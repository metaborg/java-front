%%%
 %% Section 3.4: Line Terminators
 %%%
module LineTerminators

sorts

  LineTerminator CarriageReturn EndOfFile

lexical syntax

  LineTerminator = [\n]
  LineTerminator = [\r] [\n]
  LineTerminator = CarriageReturn
  LineTerminator = EndOfFile
  CarriageReturn = [\r]

lexical restrictions

  CarriageReturn -/- [\n]

lexical syntax

  EndOfFile =

lexical restrictions

  EndOfFile -/- ~[]
