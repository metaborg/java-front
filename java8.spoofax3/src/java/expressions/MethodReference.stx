module java/expressions/MethodReference

imports

  signatures/syntax/java/expressions/MethodReference-sig

  java/expressions/Main
  java/names/TypeNames
  java/types/ParameterizedTypes
  java/types/ReferenceTypes


rules // 15.13. Method Reference Expressions

  [ExprOk-MethodReferenceRType] exprOk(s, MethodReferenceRType(refType, typeArgsOpt, id)) = _ :-
    _ == refTypeOk(s, refType),
    _ == typeArgsOptOk(s, typeArgsOpt),
    true.

  [ExprOk-MethodReferenceExpr] exprOk(s, MethodReferenceExpr(expr, typeArgsOpt, id)) = _ :-
    _ == exprOk(s, expr),
    _ == typeArgsOptOk(s, typeArgsOpt),
    true.

  [ExprOk-MethodReferenceSuper] exprOk(s, MethodReferenceSuper(typeArgsOpt, id)) = _ :-
    _ == typeArgsOptOk(s, typeArgsOpt),
    true.

  [ExprOk-MethodReferenceQSuper] exprOk(s, MethodReferenceQSuper(typeName, typeArgsOpt, id)) = _ :-
    typeNameOk(s, typeName) == _,
    _ == typeArgsOptOk(s, typeArgsOpt),
    true.

  [ExprOk-MethodReferenceCType] exprOk(s, MethodReferenceCType(clsType, typeArgsOpt)) = _ :-
    _ == clsTypeOk(s, clsType),
    _ == typeArgsOptOk(s, typeArgsOpt),
    true.

  [ExprOk-MethodReferenceAType] exprOk(s, MethodReferenceAType(arrayType, typeArgsOpt)) = _ :-
    _ == arrayTypeOk(s, arrayType),
    _ == typeArgsOptOk(s, typeArgsOpt),
    true.


